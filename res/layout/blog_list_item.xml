<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.80"
        android:orientation="horizontal"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/img_list_blog"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_donde" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txt_list_blog_tit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="blog Titulua"
                    android:textColor="#0000FF"
                    android:textColorHint="#0000FF"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txt_list_blog_egilea"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="egilea"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_list_blog_postTit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Post titulua"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>
